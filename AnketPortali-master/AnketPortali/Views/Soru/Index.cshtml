@{
    ViewData["Title"] = "Index";
}
@model List<SoruModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary">Sorular</h3>
        <a asp-action="Insert" class="btn btn-primary btn-sm"><i class="bi bi-plus-circle"></i> Soru Ekle</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>

                    <th scope="col">#</th>
                    <th scope="col">Soru</th>
                    <th scope="col">İşlemler</th>
                    
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">Henüz soru eklenmedi.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.Question</td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Detay</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Sil</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
